#!/bin/sh
if [ -n "$1" ]; then
    export MANROFFOPT='-c'
    export MANPAGER="$0"
    exec man -P "$0" "$@"
fi
if [ -x "`command -v nvim`" ]; then
    VIM='nvim'
    COL='col -bpx'
else
    VIM='vim'
    COL='col -bpx'
fi
$COL | $VIM -M -R -c 'set ft=man nomod nolist nonumber' \
    -c 'noremap q :quit<CR>' \
    -c 'noremap <SPACE> <C-D><C-G>' \
    -c 'noremap b <C-U><C-G>' \
    -c 'nnoremap <Up> <C-Y>' \
    -c 'nnoremap <Down> <C-E>' \
    -c 'nnoremap K :Man <C-R>=expand("<cword>")<CR><CR>' - "$@"
