unset HISTFILE
export HISTFILE

for editor in nvim vim vi; do
    if which -s "$editor" >/dev/null 2>&1; then
        EDITOR="$editor"
        VISUAL="$editor"
        break
    fi
done

EXINIT='set autoindent'
export EXINIT
PAGER='less -XRF'
export PAGER
PAPERSIZE=a4
export PAPERSIZE
CVS_RSH=ssh
export CVS_RSH
RSYNC_RSH=ssh
export RSYNC_RSH

# set PATH so it includes user's private bin if it exists
if [ -d "${HOME}/bin" ]; then
    PATH="${HOME}/bin:${PATH}"
    export PATH
fi

if [ -z "$MANPATH" ]; then
    MANPATH="/usr/local/man:/usr/local/share/man:/usr/man:/usr/share/man"
    export MANPATH
fi

if [ -d "${HOME}/man" ] ; then
    MANPATH="${HOME}/man:${MANPATH}"
    export MANPATH
fi

if [ -z "$TMPDIR" -a -n "$TMP" ]; then
    TMPDIR="$TMP"
    export TMPDIR TMP
fi

if [ -z "$ENVONLY" ]; then
    if [ -t 0 ]; then
        # Set the interrupt character to Ctrl-c and do clean backspacing.
        stty intr '^C' echoe 
        # Disable ^S ^Q flow control
        stty -ixon -ixoff stop '' start ''
    fi
fi
